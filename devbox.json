{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.10.7/.schema/devbox.schema.json",
  "packages": [
    "go@latest",
    "gofumpt@latest",
    "golangci-lint@latest",
    "yaegi@latest"
  ],
  "env": {
    "EDITOR":     "code -w",
    "GIT_EDITOR": "code -w",
